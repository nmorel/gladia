{
  "name": "@gladia/ui",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint ./",
    "tscheck": "tsc --noEmit",
    "build": "remix build",
    "serve": "cross-env NODE_ENV=production node ./server.js",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./server.js --watch ./server.js --watch ../../packages/sdk/dist --watch ../../packages/zod-types/dist",
    "dev:remix": "remix watch"
  },
  "dependencies": {
    "@gladia/sdk": "workspace:*",
    "@gladia/zod-types": "workspace:*",
    "@remix-run/express": "^1.15.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "classnames": "^2.3.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "daisyui": "^2.51.5",
    "express": "^4.18.2",
    "isbot": "^3.6.10",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-json-tree": "^0.18.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.8",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  }
}
