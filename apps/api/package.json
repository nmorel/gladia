{
  "name": "@gladia/api",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint ./",
    "tscheck": "tsc --noEmit",
    "schema:generate": "node -r tsconfig-paths/register -r ts-node/register ./scripts/generateSchema.ts",
    "build": "nest build",
    "dev": "nest start --debug --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^1.9.2",
    "@gladia/db": "workspace:*",
    "@gladia/zod-types": "workspace:*",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "bcrypt": "^5.1.0",
    "nestjs-prisma": "^0.20.0",
    "openapi3-ts": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@gladia/eslint": "workspace:*",
    "@gladia/tsconfig": "workspace:*",
    "@nestjs/cli": "^9.4.1",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.1",
    "@types/multer": "^1.4.7",
    "@types/node": "18.16.0",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.39.0",
    "jest": "29.5.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
