{
  "name": "@gladia/db",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint ./",
    "tscheck": "tsc --noEmit",
    "prepare:dev": "prisma db push --skip-generate && ts-node prisma/seed.ts",
    "dev": "nx watch --projects=@gladia/db --includeDependencies -- pnpm build",
    "build": "prisma generate && tsup src/index.ts --format cjs,esm --dts --clean"
  },
  "dependencies": {
    "@prisma/client": "4.13.0"
  },
  "devDependencies": {
    "@gladia/eslint": "workspace:*",
    "@gladia/tsconfig": "workspace:*",
    "@types/node": "18.16.0",
    "bcrypt": "^5.1.0",
    "eslint": "^8.39.0",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
